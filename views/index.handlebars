<div class="col-sm-6">

  <form action="/" method="POST">
    <h1>Account Login</h1>
    <div class="mb-3">
      <label for="email" class="form-label">Email address</label>
      <input name="email" type="email" class="form-control" id="email" aria-describedby="email" value="{{email}}"
        required>
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input name="password" type="password" class="form-control" aria-describedby="password" id="password"
        value="password" required>
    </div>
    {{#if message}}
    <div class="form-text text-danger my-2">Can't find your username and password.</div>
    {{/if}}
    <button type="submit" class="btn btn-primary">Sign In</button>
  </form>

</div>